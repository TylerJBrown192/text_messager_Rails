
<div id="message-form" class="col-xs-6">
  <%= form_for @message do |f| %>
    <div class="form-group">
      <%= f.label :to %> or, <%= link_to "Add Contact", new_contact_path %>
      <%= f.text_field :to, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
